<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.IMEI_CHECKER">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/addVieww"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/card"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="20dp"
        android:background="#E0E0E0"
        android:padding="6dp"
        android:text="Find your device using IMEI"
        android:textAlignment="center"
        android:textSize="17sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_margin="12dp"
        >

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/imei_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape2"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:hint="Type device IMEI"/>

            <Button
                android:id="@+id/btnGo"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="Go"
                android:paddingHorizontal="100dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/gradient_shape3"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/device_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape2"
                android:padding="10dp"
                android:src="@drawable/realmegt"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:layout_marginHorizontal="12dp"
                android:textSize="15sp"
                android:textColor="#1565C0"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#1565C0"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/shape2"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model"
                android:layout_marginHorizontal="12dp"
                android:textSize="15sp"
                android:textColor="#1565C0"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/model_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#1565C0"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/shape2"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black-List Status"
                android:layout_marginHorizontal="12dp"
                android:textSize="15sp"
                android:textColor="#1565C0"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/black_list_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#1565C0"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/shape2"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/btnUnlockNow"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Unlock Now"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_shape3"/>

                <Button
                    android:id="@+id/btnMoreServices"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Services"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@drawable/gradient_shape3"/>


            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>