<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activities.SplashScreen">
    <TextView
        android:id="@+id/maintext"
        android:visibility="gone"
        android:layout_above="@id/footer"
        android:layout_below="@id/fl_adplaceholder"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:lines="3"
        android:layout_centerInParent="true"
        android:text="WELCOME IMEI CHECKER AND UNLOCKER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <!--  This is your template view -->
    <FrameLayout
        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/mainlogo"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/freeImeiChecker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Free Imei Checker"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <ImageView

            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/networkUnlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Network Unlock"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </LinearLayout>
    <free.imei.check.and.network.unlocker.Helper.HorizontalDottedProgress
        android:layout_width="wrap_content"
        android:id="@+id/loadingDots"
        android:layout_marginTop="20dp"
        android:layout_below="@id/mainlogo"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"></free.imei.check.and.network.unlocker.Helper.HorizontalDottedProgress>

    <LinearLayout
        android:gravity="center"

        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#AFAEAE">
        <ImageView

            android:id="@+id/openApp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:src="@drawable/unlockicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
    </LinearLayout>

</RelativeLayout>